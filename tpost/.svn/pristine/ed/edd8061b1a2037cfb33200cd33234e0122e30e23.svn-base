@charset "utf-8";
/* CSS Document */

@import url("reset.css"); /* HTML 초기화 */

body {min-width:500px; min-width:500px; background:#fef1eb url("../images/login-cover.png") no-repeat ; background-size: cover auto 100%;}

/* 로그인 */
.loginWrap {position:absolute; top:50%; left:50%; width:1280px; height:858px; margin:-429px 0 0 -640px;background:#fef1eb url("../images/login-box.png") no-repeat ; border-radius: 10px;}

.loginForm {position: absolute;top:430px; left: 170px; width: 550px}
.inputBox {overflow:hidden; margin:0 0 15px 0; padding:15px 20px 0 ; border:1px solid #e4e4e4; background:#e9edf0; width: 350px; border-radius: 25px; height: 36px;}
.inputBox label {display:none;}
.inputBox input {width:100%; color:#bbc5ca; font-size:16px; background: transparent; border:none; line-height: 20px; height: 20px;outline: none;}
::-webkit-input-placeholder{/*Edge*/ color: #bbc5ca;}
::-ms-input-placeholder{/*IE 10-11*/ color: #bbc5ca;}
::placeholder{color: #bbc5ca;}

.loginForm ul{width: 390px; margin-top:14px; clear: both;}
.loginForm ul li{ height: 40px; line-height: 40px; vertical-align: middle; display: inline-block; width: 50%; float: left;}
.loginForm ul li:last-child{ text-align: right;}

button.login { width: 145px; height: 115px; background: #fea741; border-radius: 35px; border:none; font-size: 22px; font-weight: 700; color: #fff; position: absolute;right: 0; top:0;}
button.initPw { height: 40px; border:1px solid #fea741; color: #fea741; font-size: 16px; border-radius: 20px; line-height: 40px; padding: 0 30px;}

input[type=checkbox] { position: relative; display: none;} 
input[type=checkbox] + label  { position:relative;display: inline-block;width: 18px;height: 18px;  background:#fff; border:1px solid #aaa; border-radius: 4px; text-align: center; vertical-align: middle; margin: 0 8px; } 
input[type=checkbox] + label:after{content: "";display:block; position: relative ; height: 20px;background: url("../images/checked.png") no-repeat center 45%}
input[type=checkbox]:checked + label {background:#fea43a;border:1px solid #fea43a;}
input[type=checkbox]:checked + label:after {content: ""; color: #fff;}
label{color: #666; font-size: 16px;}

ul.guide{position: absolute;right: 50px;top:600px; width: 470px; color: #fff;	font-size: 13px; font-weight: 200;}
ul.guide li{list-style: disc outside;}





